<%= form_for @listing do |f| %>

  <fieldset>
    <%= f.label :address, 'Street Address' %>
    <%= f.text_field :address, :autofocus => true %>
  </fieldset>
  <fieldset>
    <%= f.label :suburb %>
    <%= f.text_field :suburb %>
  </fieldset>
  <fieldset>
    <%= f.label :details %>
    <%= f.text_area :details %>
  </fieldset>
  <fieldset>
    <%= f.label :available, "Is this property available?" %>
    <%= f.check_box :available %>
  </fieldset>
  <%= f.submit %>

<% end %>
