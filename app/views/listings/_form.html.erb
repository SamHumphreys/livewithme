<div class="container-fluid">
  <p class="linealone font1">New Listing</p>

</div>

<%= form_for @listing do |f| %>
  <div class="container-fluid">
    <div class="row">
      <%= f.label :address, 'Street Address', :class => 'col-lg-4'%>
      <%= f.text_field :address, :autofocus => true, :class => 'col-lg-6' %>
    </div>
    <div class="row">
      <%= f.label :suburb, :class => 'col-lg-4' %>
      <%= f.text_field :suburb, :class => 'col-lg-6' %>
    </div>
    <div class="row">
      <%= f.label :details, :class => 'col-lg-4' %>
      <%= f.text_area :details, :class => 'col-lg-6' %>
    </div>
    <div class="row">
      <%= f.label :available, "Is this property available?" %>
      <%= f.check_box :available %>
    </div>
    <div class="col-lg-4"></div>
    <%= f.submit 'Save changes', :class => 'col-lg-6 blurb' %>
  </div>
<% end %>
