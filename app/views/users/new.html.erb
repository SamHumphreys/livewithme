<div class="content">

  <p class="lineabove">New User</p>
  <p class="linebelow font1">SIGNUP</p>

  <% if @user.errors.any? %>
    <ol>
      <% @user.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
    </ol>
  <% end %>

  <div class="container-fluid">
    <%= form_for @user do |f| %>
      <div class="row">
        <%= f.label :email, :class => 'col-lg-4' %>
        <%= f.email_field :email, :required => true, :autofocus => true, :class => 'col-lg-6' %>
      </div>
      <div class="row">
        <%= f.label :first_name, :class => 'col-lg-4' %>
        <%= f.text_field :first_name, :required => true, :class => 'col-lg-6' %>
      </div>
      <div class="row">
        <%= f.label :password, :class => 'col-lg-4' %>
        <%= f.password_field :password, :required => true, :class => 'col-lg-6' %>
      </div>
      <div class="row">
        <%= f.label :password_confirmation, :class => 'col-lg-4' %>
        <%= f.password_field :password_confirmation, :required => true, :class => 'col-lg-6' %>
      </div>
      <div class="row submit">
        <div class="col-lg-4"></div>
        <%= f.submit 'Sign Up!', :class => 'col-lg-6' %>
      </div>
    <% end %>
  </div>
</div>
